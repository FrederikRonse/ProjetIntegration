@model BO.FilterOptions

@{
    ViewBag.Title = "Home Page";
}

<div class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm("FilterVehicles", "Vehicle", FormMethod.Post))
                {
                <div class="form-group">
                    <label>Pick-up Place</label>
                    @Html.DropDownListFor(x=>x.lstOffices, new SelectList (Model.lstOffices), "Select the pick-up place", new { @class = "form-control" })
                    @* @Html.DropDownList("officeFilter", (SelectList)Session["lstOffices"], "Select the pick-up place", new { @class = "form-control" })  @*new { @class = "form-control", onchange = "this.form.submit();" })*@
                </div>
                <div class="form-group">
                    <label>Make</label>
                    @Html.DropDownListFor(x => x.lstMakes, new SelectList(Model.lstMakes), "Select the make", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Fuel Type</label>
                    @Html.DropDownListFor(x => x.lstFuels, new SelectList(Model.lstFuels), "Select the fuel type", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Number of Doors</label>
                    @Html.DropDownListFor(x => x.lstDoors, new SelectList(Model.lstDoors), "Select the number of doors", new { @class = "form-control" })
                </div>

                    <button type="submit" class="btn btn-primary my-3">Search</button>
                }
            </div>


            <div class="col-md-6">
                <div class="p-5 text-center bg-secondary text-white">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <div id="carouselArchitecture" class="carousel slide" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                        <li data-target="#carouselArchitecture" data-slide-to="0" class="active">
                                            <i></i>
                                        </li>
                                        <li data-target="#carouselArchitecture" data-slide-to="1">
                                            <i></i>
                                        </li>
                                        <li data-target="#carouselArchitecture" data-slide-to="2">
                                            <i></i>
                                        </li>
                                    </ol>
                                    <div class="carousel-inner" role="listbox">
                                        <div class="carousel-item active">
                                            <img class="d-block img-fluid" src="https://pingendo.github.io/templates/sections/assets/gallery_architecture_1.jpg" data-holder-rendered="true">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="d-block img-fluid" src="https://pingendo.github.io/templates/sections/assets/gallery_architecture_2.jpg" data-holder-rendered="true">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="d-block img-fluid" src="https://pingendo.github.io/templates/sections/assets/gallery_architecture_3.jpg" data-holder-rendered="true">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jquery")


}